#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run type checking
echo "Running type check..."
/usr/bin/npm run type-check || {
    echo "âŒ Type check failed. Please fix type errors before committing."
    exit 1
}

# Run ESLint specifically for unused imports
echo "Checking for unused imports..."
/usr/bin/npm run lint || {
    echo "âŒ Linting failed. Please fix linting errors before committing."
    exit 1
}

# Run lint-staged (Prettier and other checks)
echo "Running lint-staged..."
/usr/bin/npx lint-staged || {
    echo "âŒ Lint-staged checks failed. Please fix the issues before committing."
    exit 1
}

echo "âœ… All pre-commit checks passed!" 